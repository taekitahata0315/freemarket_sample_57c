.single-header
  %h1.single-header__logo
    =link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3951034907"),'/'
  %nav.progress-bar
    %ol.clearfix
      %li.progress-bar__active
        会員情報
        .progress-bar__active__status
      %li.progress-bar__active__phone-number
        電話番号認証
        .progress-bar__active__status__phone-number
      %li.progress-bar__active__address
        お届け先住所入力
        .progress-bar__active__status__address
      %li.progress-bar__active__payment
        支払い方法
        .progress-bar__active__status__payment
      %li.progress-bar__active__complete
        完了
        .progress-bar__active__status__complete

%main.single-main
  %section.l-single-container
    %h2.l-single-head__registration 会員情報入力
    .form
      .l-single-content
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .l-single-content__nickname
            = f.label :"ニックネーム"
            %span.l-single-content__require 必須
            %br
          .l-single-content__nickname__form
            = f.text_field :nickname, autofocus: true, placeholder: "例) メルカリ太郎"
          .l-single-conten__email
            = f.label :"メールアドレス"
            %span.l-single-content__require 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)PC.携帯どちらでも可"
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: '6文字以上'
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '6文字以上'
            = f.text_field :last_name, autofocus: true, placeholder: '例) 山田'
            = f.text_field :first_name, autofocus: true, placeholder: '例) 彩'
            = f.text_field :last_name_kana, autofocus: true, placeholder: '例) ヤマダ'
            = f.text_field :first_name_kana, autofocus: true, placeholder: '例) アヤ'
          .field
            = f.date_select :birthday, start_year:1900, end_year: Time.current.year, use_month_numbers: true
          .actions
            = f.submit "Sign up"
        = render "devise/shared/links"
